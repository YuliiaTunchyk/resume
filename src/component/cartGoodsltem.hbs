<div class='card'>
  <div class='row g-2'>
    <div class='col-2 pt-3 ps-3'>
      <img
        src={{image}}
        class='img-fluid rounded-start'
        alt='...'
      />
    </div>
    <div class='col-4 p-2'>
      <h5 class='card-title'>{{name}}</h5>
      <p class='card-text'>{{description}}</p>
    </div>
    <div class='col-2 pt-4'>
      {{#with price}}
        <p>{{title}}:</p>
        <b>{{value}}</b>
      {{/with}}
    </div>
    <div class='col-2 pt-5'>
      <p>{{amount}}</p>
    </div>
    <div class='col-2 pt-4 pb-4'>
      {{#each buttons}}
        {{#if isPrimary includeZero=true}}
          <button
            type='button'
            class='btn btn-primary'
          >{{text}}</button>
        {{/if}}
        <br />
        {{#if isDanger includeZero=true}}
          <button
            type='button'
            class='btn btn-outline-danger'
          >{{text}}</button>
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>