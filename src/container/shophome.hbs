{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<main class='p-5'>
  <div class='card'>
    <div class='nav'>
      {{#with navigation}}
        {{#each links}}
          <div class='nav-item'>
            <a
              class='nav-link'
              aria-current='page'
              href={{href}}
            >{{text}}</a>
          </div>
        {{/each}}
        <div class='nav-item'>
          <a class='nav-link disabled'>Disabled</a>
        </div>
      {{/with}}
    </div>
  </div>
  <br />
  <div class='row gx-2 gy-2'>
    {{#with newsBlock}}
      <h2 class='text-center'>{{title}}</h2>
      {{#each cards}}
        <div class='col-3'>

          <div class='card text-bg-dark'>
            <div class='card-header'>
              {{title}}
              {{#if isTop includeZero=true}}
                <span
                  class='badge text-bg-success rounded-pill'
                >{{isTop}}</span>
              {{/if}}
              {{#unless isTop}}
                {{#unless isNew}}{{/unless}}
              {{/unless}}
              {{#if isNew includeZero=true}}
                <span
                  class='badge text-bg-danger rounded-pill'
                >{{isNew}}</span>
              {{/if}}
            </div>
            <div class='card-body'>
              <p class='card-text'>{{description}}</p>
            </div>
          </div>
        </div>
      {{/each}}
    {{/with}}
  </div>
  <br />
  <hr />
  <br />
  <section>
    <div class='row gy-5 gx-2'>
      {{#with goodsBlock}}
        <div
          class='nav nav-tabs'
          id='nav-tab'
          role='tablist'
        >
          {{#each tabs}}
            <div class='col-2,5'>
              {{#if isActive includeZero=true}}
                <button
                  class='nav-link active'
                  aria-current='page'
                  href='#'
                >{{text}}</button>
              {{/if}}
              {{#unless isDisabled}}
                {{#unless isActive}}
                  <button
                    class='nav-link'
                    aria-current='page'
                    href='#'
                  >{{text}}</button>
                {{/unless}}
              {{/unless}}
              {{#if isDisabled includeZero=true}}
                <button
                  class='nav-link disabled'
                  aria-current='page'
                  href='#'
                >{{text}}</button>
              {{/if}}
            </div>
          {{/each}}
        </div>
        <br />
        {{#each cards}}
          <div class='col-4'>
            <div class='card'>
              <img
                src={{image}}
                class='card-img-top'
                alt='...'
              />
              <div class='card-body'>
                <div class='card-title'>{{title}}
                  {{#if isHot includeZero=true}}
                    <span
                      class='badge text-bg-warning rounded-pill'
                    >{{isHot}}</span>
                  {{/if}}
                  {{#unless isHot}}
                    {{#unless isNew}}{{/unless}}
                  {{/unless}}
                  {{#if isNew includeZero=true}}
                    <span
                      class='badge text-bg-primary rounded-pill'
                    >{{isNew}}</span>
                  {{/if}}
                </div>
                <p class='card-text'>{{description}}</p>
              </div>
            </div>
          </div>
        {{/each}}
      {{/with}}
    </div>
  </section>
  <hr />
  <br />
  {{#with subscribe}}
    <div class='card text-bg-dark'>
      <div class='card-body'>
        <h2 class='card-title'>{{header}}</h2>
        <p class='card-text mb-0'>{{description}}</p>
        <div>
          {{#each buttons}}
            <br />
            <button
              href={{link}}
              class='btn btn-primary mt-0 mb-2'
            >{{text}}</button>
          {{/each}}
        </div>
      </div>
    </div>
  {{/with}}
  <br />
  <hr />
  <br />
  {{#with service}}
    <div class='card text-bg-success text-center'>
      <div class='card-body'>
        <h2 class='card-title'>{{title}}</h2>
        <p class='card-text'>{{description}}</p>
        {{#each buttons}}
          <button
            href={{link}}
            class='btn btn-primary'
          >{{text}}</button>
        {{/each}}
      </div>
    </div>
  {{/with}}
  <br />
  <hr />
  <br />
  <div class='nav'>
    {{#each footer}}
      <div class='col-2'>
        <div class='nav-item vertically'>
          {{#each this}}
            <a
              class='nav-link'
              aria-current='page'
              href={{link}}
            >{{text}}</a>
          {{/each}}
          <div class='nav-item'>
            <a class='nav-link disabled'>Disabled</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</main>

