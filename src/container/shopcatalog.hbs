{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<main>
  <div class="'row">
    <div class='card'>
      <div class='nav'>
        {{#with navigation}}
          {{#each links}}
            <div class='nav-item'>
              <a
                class='nav-link'
                aria-current='page'
                href={{href}}
              >{{text}}</a>
            </div>
          {{/each}}
          <div class='nav-item'>
            <a class='nav-link disabled'>Disabled</a>
          </div>
        {{/with}}
      </div>
    </div>
    <div class='mt-5 mb-5'>
      <nav class='m-0' aria-label='breadcrumb'>
        <ol class='breadcrumb'>
          {{#each breadcrumb}}
            <li class='breadcrumb-item'><a
                href={{url}}
              >{{name}}</a></li>
            {{#if isurl includeZero=null}}
              <li
                class='breadcrumb-item active'
                aria-current='page'
              >{{name}}</li>
            {{/if}}
          {{/each}}
        </ol>
      </nav>
    </div>
    <h1>{{header}}</h1>
    <div class='row'>
      {{#each sortBlock}}
        <div class='col-3 mt-3 mb-5'>
          <select
            class='form-select'
            aria-label='Default select example'
          >
            <option selected>{{placeholder}}</option>
            {{#each options}}
              <option value={{value}}>{{text}}</option>
            {{/each}}
          </select>
        </div>
      {{/each}}
    </div>
    <div class="row g-2">
    <div class='card col-4'>
      <div class='card-body'>
        {{#with filterBlock}}
          {{#with sellers}}
            {{title}}
            {{#each list}}
              <div class='form-check mt-2'>
                <input
                  class='form-check-input'
                  type='checkbox'
                  value=''
                  id='flexCheckDefault'
                />
                <label
                  class='form-check-label'
                  for='flexCheckDefault'
                >
                  {{value}}
                </label>
              </div>
            {{/each}}
          {{/with}}
          <hr />
          {{#with brands}}
            {{title}}
            {{#with input}}
            <input class="form-control mt-3" type="text" placeholder={{placeholder}} aria-label="default input example">
              {{/with}}
                {{#each options}}
                  <div class='form-check mt-2'> 
                  <input
                  class='form-check-input'
                  type='checkbox'
                  value=''
                  id='flexCheckDefault'
                />
                <label
                  class='form-check-label'
                  for='flexCheckDefault'
                >
                {{value}}
                </div>
                {{/each}}
          {{/with}}
          <hr>
          {{#with price}}
          {{title}}
          <div class="mt-3">
          {{#with range}}
            <input class="form-control mb-3 " type="text" placeholder={{from}} aria-label="default input example">
          <input class="form-control" type="text" placeholder={{to}} aria-label="default input example">    
          {{/with}}
          </div>
          <div class="mt-3 mb-3">
           {{#with button}}
            <button
             type='button'
             class='btn btn-outline-secondary'
            href={{link}}
            >{{text}}</button>
           {{/with}}
          {{/with}}
          </div>
          <div class="m-2">
          {{#each filterList}}
          <hr>
          {{title}}
          {{#each options}}
           <div class='form-check mt-2'> 
            <input
             class='form-check-input'
             type='checkbox'
             value=''
             id='flexCheckDefault'
             />
              <label
             class='form-check-label'
              for='flexCheckDefault'
              >
            {{value}}
            </div>
          {{/each}}
        {{/each}}
        </div>
        {{/with}}
      </div>
    </div>
    <div class='col-8'>
      <div class="row g-2">
        {{#each goodsList}}
        <div class='col-6'>
            <div class='card'>
              <img
                src={{img}}
                class='card-img-top'
                alt='...'
              />
              <div class='card-body'>
                  {{#if isHot includeZero=true}}
                    <span
                      class='badge text-bg-warning rounded-pill'
                    >{{isHot}}</span>
                  {{/if}}
                  {{#if isNew includeZero=true}}
                    <span
                      class='badge text-bg-primary rounded-pill'
                    >{{isNew}}</span>
                  {{/if}}
                  {{#if isFast includeZero=true}}
                    <span
                      class='badge text-bg-success rounded-pill'
                    >{{isFast}}</span>
                  {{/if}}
                  {{#if isFree includeZero=true}}
                    <span
                      class='badge text-bg-secondary rounded-pill'
                    >{{isFree}}</span>
                  {{/if}}
                 <h5 class='card-title mt-2 mb-3'>{{name}} 
                </h5>
                {{#with review}}
                <p class='card-text'>{{amount}} {{text}}</p>
                {{/with}}
                <h3>{{price}}</h3>
                <p>{{delivery}}</p>
                {{#each buttons}}
                {{#if isPrimary includeZero=true}}
                  <div class='mb-2'>
                    <button
                      type='button'
                      class='btn btn-primary'
                    >{{text}}</button>
                  </div>
                {{/if}}
                {{#if isSecondary includeZero=true}}
                  <button
                    type='button'
                    class='btn btn-secondary'
                  >{{text}}</button>
                {{/if}}
              {{/each}}
              {{#each characteristics}}
              <ul class="list mt-3">
              <li class="list-item">{{title}}: {{value}}</li>
              </ul>
              {{/each}}
              </div>
            </div>
         </div>   
        {{/each}}
        </div>
      </div>  
</div>
    <div class='mt-5 mb-5'>
      {{#with service}}
        <div class='card text-bg-success text-center'>
          <div class='card-body'>
            <h2 class='card-title'>{{title}}</h2>
            <p class='card-text'>{{description}}</p>
            {{#each buttons}}
              <button
                href={{link}}
                class='btn btn-primary'
              >{{text}}</button>
            {{/each}}
          </div>
        </div>
      {{/with}}
    </div>
    <hr />
    <div class='nav'>
      {{#each footer}}
        <div class='col-2'>
          <div class='nav-item vertically'>
            {{#each this}}
              <a
                class='nav-link'
                aria-current='page'
                href={{link}}
              >{{text}}</a>
            {{/each}}
            <div class='nav-item'>
              <a class='nav-link disabled'>Disabled</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</main>
