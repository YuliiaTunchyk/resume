{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<main class='p-5'>
  <div class='card'>
    <div class='nav'>
      {{#with navigation}}
        {{#each links}}
          <div class='nav-item'>
            <a
              class='nav-link'
              aria-current='page'
              href={{href}}
            >{{text}}</a>
          </div>
        {{/each}}
        <div class='nav-item'>
          <a class='nav-link disabled'>Disabled</a>
        </div>
      {{/with}}
    </div>
  </div>
  <div class='mb-5 mt-5'>
    {{#with header}}
      <h1>{{title}}</h1>
      <br />
      {{#with button}}
        <button
          href={{link}}
          type='button'
          class='btn btn-outline-secondary'
        >{{text}}</button>
      {{/with}}
    {{/with}}
  </div>
  <hr />
  <div class='mb-5 mt-4'>
    {{#each goodsBlock}}
      <br />
      <div class='card'>
        <div class='row g-2'>
          <div class='col-2 pt-3 ps-3'>
            <img
              src={{image}}
              class='img-fluid rounded-start'
              alt='...'
            />
          </div>
          <div class='col-4 p-2'>
            <h5 class='card-title'>{{name}}</h5>
            <p class='card-text'>{{description}}</p>
          </div>
          <div class='col-2 pt-4'>
            {{#with price}}
              <p>{{title}}:</p>
              <b>{{value}}</b>
            {{/with}}
          </div>
          <div class='col-2 pt-5'>
            <p>{{amount}}</p>
          </div>
          <div class='col-2 pt-4 pb-4'>
            {{#each buttons}}
              {{#if isPrimary includeZero=true}}
                <button
                  type='button'
                  class='btn btn-primary'
                >{{text}}</button>
              {{/if}}
              <br />
              {{#if isDanger includeZero=true}}
                <button
                  type='button'
                  class='btn btn-outline-danger'
                >{{text}}</button>
              {{/if}}
            {{/each}}
          </div>
        </div>
      </div>
    {{/each}}
  </div>
  <hr />
  <div class='mb-5 mt-5'>
    {{#with total}}
      <h2>{{title}}</h2>
      <h1>{{amount}}</h1>
      <p>{{delivery}}</p>
      <br />
      {{#each buttons}}
        {{#if isSuccess includeZero=true}}
          <button
            type='button'
            href={{link}}
            class='btn btn-success'
          >{{text}}</button>
        {{/if}}
        <br />
        {{#if isOutline includeZero=true}}
          <button
            type='button'
            href={{link}}
            class='btn btn-outline-success'
          >{{text}}</button>
        {{/if}}
      {{/each}}
    {{/with}}
  </div>
  <hr />
  <div class='mb-5 mt-5'>
    {{#with goodsOtherBlock}}
      <h2 class='text-center'>{{title}}</h2>
      <div class='row g-2'>
        {{#each cards}}
          <div class='col-4'>
            <div class='card'>
              <img
                src={{image}}
                class='card-img-top'
                alt='...'
              />
              <div class='card-body'>
                <div class='card-title'>{{title}}
                  {{#if isHot includeZero=true}}
                    <span
                      class='badge text-bg-warning rounded-pill'
                    >{{isHot}}</span>
                  {{/if}}
                  {{#unless isHot}}
                    {{#unless idNew}}{{/unless}}
                  {{/unless}}
                  {{#if idNew includeZero=true}}
                    <span
                      class='badge text-bg-primary rounded-pill'
                    >{{idNew}}</span>
                  {{/if}}
                </div>
                <p class='card-text'>{{description}}</p>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    {{/with}}
  </div>
  <hr />
  <div class='mb-5 mt-5'>
    {{#with subscribe}}
      <div class='card text-bg-dark'>
        <div class='card-body'>
          <h2 class='card-title'>{{header}}</h2>
          <p class='card-text mb-0'>{{description}}</p>
          <div>
            {{#each buttons}}
              <br />
              <button
                href={{link}}
                class='btn btn-primary mt-0 mb-2'
              >{{text}}</button>
            {{/each}}
          </div>
        </div>
      </div>
    {{/with}}
  </div>
  <hr />
  <div class='nav'>
    {{#each footer}}
      <div class='col-2'>
        <div class='nav-item vertically'>
          {{#each this}}
            <a
              class='nav-link'
              aria-current='page'
              href={{link}}
            >{{text}}</a>
          {{/each}}
          <div class='nav-item'>
            <a class='nav-link disabled'>Disabled</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</main>

