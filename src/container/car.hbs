{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
    <h1>{{make}}</h1>
    <h2>{{model}}</h2>
    <data>{{year}}</data>
    <br />
    <em>{{color}}</em>
	<br>
    <hr />
  <section>	
    <div>
		{{> title data="Features:" big=true}}
		{{> title data="Interior" big=true}}      
		  <ul>
        {{#with features}}
          {{#with interior}}
            {{#with seats}}
			{{> title data="Seats"}}
              <li>{{material}}</li>
              <li>{{color}}</li>
              <li>{{#if heated}} yes {{/if}}</li>
              <li>{{#if ventilated}} yes {{/if}}</li>
            {{/with}}
			{{#with dashboard}}
				{{> title data="Dashboard"}}
              <li>{{material}}</li>
              <li>{{color}}</li>
				{{#with display}}
				<li>{{type}}</li>
				<li>{{size}}</li>
              <li>{{resolution}}</li>
              <li>{{#if touchscreen}} yes {{/if}}</li>
			  {{/with}}
			{{/with}}
			{{#with audio}}
			{{> title data="Audio"}}
              <li>{{system}}</li>
              <li>{{speakers}}</li>
              <li>{{#if subwoofer}} yes {{/if}}</li>
              <li>{{#if bluetooth}} yes {{/if}}</li>
			  <li>{{#if USB}} yes {{/if}}</li>
            {{/with}}
          {{/with}}
		</ul>
	</div>
	<br>
	<hr>
	<div>
		{{> title data="Exterior" big=true}}
		<ul>
		  {{#with exterior}}
            {{#with wheels}}
			{{> title data="Wheels"}}
              <li>{{size}}</li>
			  <li>{{type}}</li>
              <li>{{color}}</li>
            {{/with}}
			{{#with headlights}}
			{{> title data="Headlights"}}
			  <li>{{type}}</li>
              <li>{{brightness}}</li>
			  <li>{{#if automatic}} yes {{/if}}</li>
            {{/with}}
			{{#with sunroof}}
			{{> title data="Sunroof"}}
				<li>{{type}}</li>
              	<li>{{size}}</li>
				<li>{{#if automatic}} yes {{/if}}</li>
            {{/with}}
			{{/with}}
		</ul>
	</div>
	<br>
	<hr>
	<div>
		{{> title data="Safety" big=true}}
		<ul>
			{{#with safety}}
            {{#with airbags}}
			{{> title data="Airbags"}}
				<li>{{front}}</li>
              	<li>{{side}}</li>
				<li>{{knee}}</li>
              	<li>{{rear}}</li>
			{{/with}}
			{{#with assistance}}
			{{> title data="Assistance"}}
			<li>{{#if blind_spot_monitoring}} yes {{/if}}</li>
			<li>{{#if rear_cross_traffic_alert}} yes {{/if}}</li>
			<li>{{#if lane_departure_warning}} yes {{/if}}</li>
			<li>{{#if adaptive_cruise_control}} yes {{/if}}</li>
			<li>{{#if collision_warning}} yes {{/if}}</li>
			{{/with}}
			{{/with}}
        {{/with}}
      </ul>
    </div>
	<hr>
	<div>
		{{> title data="Engine" big=true}}
		<ul>
		{{#with engine}}
		<li>{{type}}</li>
		<li>{{displacement}}</li>
		<li>{{horsepower}}</li>
		<li>{{torque}}</li>
		{{#with transmission}}
		<li>{{type}}</li>
		<li>{{gears}}</li>
		{{/with}}
		{{/with}}
		</ul>
	</div>
	<hr>
		<div>
		{{> title data="Fuel_economy" big=true}}
		<ul>
		{{#with fuel_economy}}
		<li>{{city}}</li>
		<li>{{highway}}</li>
		<li>{{combined}}</li>
		{{/with}}
		</ul>
	</div>
	<hr>
		<div>
		{{> title data="Price" big=true}}
		<ul>
		{{#with price}}
		<li>{{base}}</li>
		<li>{{destination}}</li>
		{{#with options}}
		<li>{{navigation}}</li>
		<li>{{moonroof}}</li>
		<li>{{premium_paint}}</li>		
		{{/with}}
		{{> title data="Total"}}
		{{total}}
		{{/with}}
		</ul>
	</div>
  </section>
</div>

