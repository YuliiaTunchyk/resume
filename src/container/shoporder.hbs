{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<main class='p-5'>
  <div class="'row">
    <div class='card'>
      <div class='nav'>
        {{#with navigation}}
          {{#each links}}
            <div class='nav-item'>
              <a
                class='nav-link'
                aria-current='page'
                href={{href}}
              >{{text}}</a>
            </div>
          {{/each}}
          <div class='nav-item'>
            <a class='nav-link disabled'>Disabled</a>
          </div>
        {{/with}}
      </div>
    </div>
    <br />
    <h1>{{header}}</h1>
    <br />
    <div class='row g-2'>
      <div class='col-8'>
        {{#with contacts_data}}
          <h2>{{title}}</h2>
          {{#each buttons}}
            {{#if isPrimary includeZero=true}}
              <button
                type='button'
                class='btn btn-warning'
              >{{text}}</button>
            {{/if}}
            {{#if isOutline includeZero=true}}
              <button
                type='button'
                class='btn btn-outline-warning'
              >{{text}}</button>
            {{/if}}
          {{/each}}
          <div class='mb-4 mt-4'>
          {{#with form}}
            {{#with input}}
              <div class='row g-3'>
                <div class='col-6'>
                  {{#with surname}}
                    <label
                      class='form-label'
                    >{{label}}</label>
                    <input
                      class='form-control'
                      placeholder={{placeholder}}
                    />
                    <div class='form-text'>
                      {{caption}}
                    </div>
                  {{/with}}
                </div>
                <div class='col-6'>
                  {{#with name}}
                    <label
                      class='form-label'
                    >{{label}}</label>
                    <input
                      class='form-control'
                      placeholder={{placeholder}}
                    />
                    <div class='form-text'>
                      {{caption}}
                    </div>
                  {{/with}}
                </div>
                <div class='col-6'>
                  {{#with phone}}
                    <label
                      class='form-label'
                    >{{label}}</label>
                    <input
                      class='form-control'
                      placeholder={{placeholder}}
                    />
                    <div class='form-text'>
                      {{caption}}
                    </div>
                  {{/with}}
                </div>
                <div class='col-6'>
                  {{#with email}}
                    <label
                      class='form-label'
                    >{{label}}</label>
                    <input
                      class='form-control'
                      placeholder={{placeholder}}
                    />
                    <div class='form-text'>
                      {{caption}}
                    </div>
                  {{/with}}
                </div>
              </div>
            {{/with}}
			</div>
            <hr />
            <div class='p-2'>
              {{#each switch}}
                <div class='mb-4'>
                  {{#unless isActive includeZero=true}}
                    <div class='form-check form-switch'>
                      <input
                        class='form-check-input'
                        type='checkbox'
                        role='switch'
                        id='flexSwitchCheckDefault'
                      />
                      <label
                        class='form-check-label'
                        for='flexSwitchCheckDefault'
                      >{{text}}</label>
                    </div>
                  {{/unless}}
                </div>
                {{#if isActive includeZero=true}}
                  <div class='form-check form-switch'>
                    <input
                      class='form-check-input'
                      type='checkbox'
                      role='switch'
                      id='flexSwitchCheckChecked'
                      checked
                    />
                    <label
                      class='form-check-label'
                      for='flexSwitchCheckChecked'
                    >{{text}}</label>
                  </div>
                {{/if}}
              {{/each}}
            </div>
          {{/with}}
          <hr />
        {{/with}}
        <div class='mt-4'>
          {{#with delivery}}
            <h2>{{title}}</h2>
            <div class='card'>
              <div class='card-body'>
                <div class='row'>
                  {{#each select}}
                    <div class='col-6'>
                      <label
                        class='form-label'
                      >{{label}}</label>
                      <select class='form-select'>
                        <option
                          selected
                        >{{placeholder}}</option>
                        {{#each options}}
                          <option
                            value={{value}}
                          >{{text}}</option>
                        {{/each}}
                      </select>
                    </div>
                  {{/each}}
                </div>
              </div>
            </div>
            <div class='mt-3 mb-4'>
              {{#each delivery_type}}
                <div class='form-check'>
                  <input
                    class='form-check-input'
                    type='radio'
                    name='exampleRadios'
                    id='exampleRadios1'
                    value='option1'
                  />
                  <label
                    class='form-check-label'
                    for='exampleRadios1'
                  >
                    {{type}}
                  </label>
                </div>
              {{/each}}
            </div>
            <hr />
			<div class="mt-4 mb-4">
            {{#with payment}}
              <h2>{{title}}</h2>
              {{#each list}}
                <div class='form-check'>
                  <input
                    class='form-check-input'
                    type='radio'
                    name='exampleRadios'
                    id='exampleRadios1'
                    value='option1'
                  />
                  <label
                    class='form-check-label'
                    for='exampleRadios1'
                  >
                    {{type}}
                  </label>
                  <p>{{description}}</p>
                </div>
              {{/each}}
            {{/with}}
			</div>
            <hr />
			<div class='mb-4 mt-4'>
            {{#with contact}}
              <h2>{{title}}</h2>
              <div class='row g-3'>
                <div class='col-6'>
                  {{#with surname}}
                    <label
                      class='form-label'
                    >{{label}}</label>
                    <input
                      class='form-control'
                      placeholder={{placeholder}}
                    />
                    <div class='form-text'>
                      {{caption}}
                    </div>
                  {{/with}}
                </div>
                <div class='col-6'>
                  {{#with name}}
                    <label
                      class='form-label'
                    >{{label}}</label>
                    <input
                      class='form-control'
                      placeholder={{placeholder}}
                    />
                    <div class='form-text'>
                      {{caption}}
                    </div>
                  {{/with}}
                </div>
                <div class='col-6'>
                  {{#with phone}}
                    <label
                      class='form-label'
                    >{{label}}</label>
                    <input
                      class='form-control'
                      placeholder={{placeholder}}
                    />
                    <div class='form-text'>
                      {{caption}}
                    </div>
                  {{/with}}
                </div>
                <div class='col-6'>
                  {{#with email}}
                    <label
                      class='form-label'
                    >{{label}}</label>
                    <input
                      class='form-control'
                      placeholder={{placeholder}}
                    />
                    <div class='form-text'>
                      {{caption}}
                    </div>
                  {{/with}}
                </div>
              </div>
            {{/with}}
			</div>
            <hr />
            <div class='mb-4 mt-4'>
              {{#with coment}}
                <label class='form-label'>{{label}}</label>
                <input
                  class='form-control'
                  placeholder={{placeholder}}
                />
              {{/with}}
            </div>
            <hr />
          {{/with}}
        </div>
      </div>
      <div class='col-4'>
        <div class='card'>
          <div class='card-body'>
            {{#each action_block}}
              {{#if isSuccess includeZero=true}}
                <button
                  type='button'
                  class='btn btn-success'
                >{{text}}</button>
              {{/if}}
              {{#if isDanger includeZero=true}}
                <div class='mt-2 mb-2'>
                  <button
                    type='button'
                    class='btn btn-danger'
                  >{{text}}</button>
                </div>
              {{/if}}
              {{#if isInfo includeZero=true}}
                <button
                  type='button'
                  class='btn btn-info'
                >{{text}}</button>
              {{/if}}
            {{/each}}
          </div>
        </div>
        <div class="mt-3">
        {{#with total}}
          <div class='card'>
            <h2 class='card-title m-3 mb-0'>{{title}}</h2>
            <div class='card-body'>
              {{#each item_list}}
                <div class='list-group'>
                  <div
                    class='list-group-flush'
                  >{{name}}:{{price}}</div>
                </div>
              {{/each}}
              <hr />
              {{#each additional_info}}
                <div class='list-group'>
                  <div
                    class='list-group-flush'
                  >{{text}}:{{value}}</div>
                </div>
              {{/each}}
              <hr />
              {{#with total_price}}
                <div class='list-group'>
                  <div
                    class='list-group-flush'
                  >{{text}}:{{value}}</div>
                </div>
              {{/with}}
              <hr />
              {{#each button}}
                {{#if isPrimary includeZero=true}}
                  <div class='mb-2'>
                    <button
                      type='button'
                      class='btn btn-primary'
                    >{{text}}</button>
                  </div>
                {{/if}}
                {{#if isOutline includeZero=true}}
                  <button
                    type='button'
                    class='btn btn-outline-primary'
                  >{{text}}</button>
                {{/if}}
              {{/each}}
            </div>
          </div>
        {{/with}}
		</div>
      </div>
      <div class='col-8'>
        <div class='mb-2 mt-2'>
          {{#with coupon}}
            <h2>{{title}}</h2>
            {{#with select}}
              {{#with availabel_coupon}}
                <label class='form-label'>{{label}}</label>
                <select
                  class='form-select form-select-lg mb-3'
                  aria-label='.form-select-lg example'
                >
                  <option selected>{{placeholder}}</option>
                  {{#each options}}
                    <option
                      value={{value}}
                    >{{text}}</option>
                  {{/each}}
                </select>
              {{/with}}
              {{#with friend_coupon}}
                <label class='form-label'>{{label}}</label>
                <select
                  class='form-select form-select-sm'
                  aria-label='.form-select-sm example'
                >
                  <option selected>{{placeholder}}</option>
                  {{#each options}}
                    <option
                      value={{value}}
                    >{{text}}</option>
                  {{/each}}
                </select>
              {{/with}}
            {{/with}}
            <div class='mt-3'>
              {{#with add}}
                {{#with friend}}
                  <label
                    class='form-label'
                  >{{label}}</label>
                  <input
                    class='form-control'
                    placeholder={{placeholder}}
                  />
                  <div class='form-text'>
                    {{caption}}
                  </div>
                {{/with}}
			</div>	
			<div class='mt-3 mb-4'>
                {{#with colleague}}
                  <label
                    class='form-label'
                  >{{label}}</label>
                  <input
                    class='form-control'
                    placeholder={{placeholder}}
                  />
                  <div class='form-text'>
                    {{caption}}
                  </div>
                {{/with}}
              {{/with}}
            </div>
          {{/with}}
        </div>
        <hr />
		<div class="mt-3">
        {{#with quiz}}
          <h3>{{title}}</h3>
          {{#with preference}}
            <label
              class='form-check-label'
              for='exampleRadios1'
            >
              {{title}}
            </label>
            {{#each options}}
              <div class='form-check'>
                <input
                  class='form-check-input'
                  type='radio'
                  name='exampleRadios'
                  id='exampleRadios1'
                  value='option1'
                />
                {{this}}
              </div>
            {{/each}}
          {{/with}}
			<div class="mt-3 mb-3">
          {{#with your_expirience}}
            <label class='form-label'>{{label}}</label>
            <input class='form-control' placeholder='' />
          {{/with}}
			</div>
          {{#with purchase_frequency}}
            <label class='form-label'>{{label}}</label>
            <select
              class='form-select form-select-sm'
              aria-label='.form-select-sm example'
            >
              <option selected>{{placeholder}}</option>
              {{#each options}}
                <option value={{value}}>{{text}}</option>
              {{/each}}
            </select>
          {{/with}}
		  <div class="mt-3">
          {{#with factors}}
            <label
              class='form-check-label'
              for='exampleRadios1'
            >
              {{title}}
            </label>
            {{#each options}}
              <div class='form-check'>
                <input
                  class='form-check-input'
                  type='checkbox'
                  value=''
                  id='flexCheckChecked'
                />
                <label
                  class='form-check-label'
                  for='flexCheckChecked'
                >
                  {{this}}
                </label>
              </div>
            {{/each}}
          {{/with}}
		  </div>
        {{/with}}
		</div>
      </div>
    </div>
    <br />
    <hr />
    <div class='nav'>
      {{#each footer}}
        <div class='col-2'>
          <div class='nav-item vertically'>
            {{#each this}}
              <a
                class='nav-link'
                aria-current='page'
                href={{link}}
              >{{text}}</a>
            {{/each}}
            <div class='nav-item'>
              <a class='nav-link disabled'>Disabled</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</main>

