{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
	<section>
  		{{#with heading}}
  			<div class='card'>
	    		<div class='card-body'>
   			 {{#with main}}
      			<div class='card'>
        		<div class='card-body'>
         		 <h1 class='card-title'>{{title}}</h1>
          		<p class='card-text'>{{text}}</p>
		 		 {{#with button_text}}
          		<a href='#' class='btn btn-primary'>{{solid}}</a>
				<br>
				<br>
		  		<a href='#' class="btn btn-outline-primary">{{outline}}</a>
        		</div>
     			 </div>
	 		 	{{/with}}
    			{{/with}}
				<br>
				{{#with second}}
      			<div class='card'>
        		<div class='card-body'>
         		 <h2 class='card-title'>{{title}}</h2>
          		<p class='card-text'>{{text}}</p>
		 		 {{#with button_text}}
          		<a href='#' class='btn btn-secondary'>{{solid}}</a>
				<br>
				<br>
		  		<a href='#' class="btn btn-outline-secondary">{{outline}}</a>
        		</div>
     			 </div>
	 		 	{{/with}}
    			{{/with}}
				<br>
				{{#with subblock}}
      			<div class='card'>
        		<div class='card-body'>
         		 <h3 class='card-title'>{{title}}</h3>
          		<p class='card-text'>{{text}}</p>
		 		 {{#with button_text}}
          		<a href='#' class='btn btn-dark'>{{solid}}</a>
				<br>
				<br>
		  		<a href='#' class="btn btn-outline-dark">{{outline}}</a>
        		</div>
     			 </div>
	 		 	{{/with}}
    			{{/with}}
				</div>
			</div>
  		{{/with}}
		<br>
		<br>
		{{#with nested_display}}
  			<div class='card'>
	    		<div class='card-body'>
          		<div class="display-1" class='card-title'>{{title}}</div>
   			 {{#with children_display}}
      			<div class='card' style="max-width: 35rem;">
        		<div class='card-body'>
         		<div class="display-4" class='card-title'>{{title}}</div>
          		<p class='card-text'>{{text}}</p>
		 		 {{#with button}}
          		<a href='#' class="btn btn-outline-warning">{{text}}</a>
        		</div>
     			 </div>
	 		 	{{/with}}
    			{{/with}}
				<br>
				<h6>{{header_text}}</h6>
				<br>
				{{#with button}}
				<a href='#' class="btn btn-info">{{text}}</a>
				{{/with}}
				</div>
			</div>
  		{{/with}}
		<br>
		<br>
		{{#with paragraph}}
  			<div class='card'>
	    		<div class='card-body'>
          		<p class='text-uppercase' class='card-title'>{{title}}</p>
				<p class='text-lowercase' class='card-text'>{{text}}</p>
		 		 {{#with button}}
          		<a href={{url}} class="btn btn-link">{{text}}</a>
	 		 	{{/with}}
				<br>
				<br>
				<div class='card'>
	    		<div class='card-body'>
					<ul>
				{{#each list_name}}
				<br>
				<li><a href={{url}} class="btn btn-link">{{text}}</a></li>
				{{/each}}
				</ul>
				</div>
				</div>
				</div>
			</div>
  		{{/with}}
  	</section>
</div>

{{!-- 
    Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
    Адже наш layout/default.hbs має вже структуру HTML
--}}