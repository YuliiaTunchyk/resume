{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<main class='p-5'>
  <div class='card'>
    <div class='nav'>
      {{#with navigation}}
        {{#each links}}
          <div class='nav-item'>
            <a
              class='nav-link'
              aria-current='page'
              href={{href}}
            >{{text}}</a>
          </div>
        {{/each}}
        <div class='nav-item'>
          <a class='nav-link disabled'>Disabled</a>
        </div>
      {{/with}}
    </div>
  </div>
  <div class='mt-5'>
    <h1>{{header}}</h1>
  </div>
  <div>
    {{#with purchase}}
      <div class='mt-5'>
        {{#each tabs}}{{/each}}
        <div
          class='nav nav-tabs'
          id='nav-tab'
          role='tablist'
        >
          <button class='nav-link active'><b>Всі замовлення</b></button>
          <button class='nav-link'>Гарантія та повернення</button>
        </div>
      </div>
      <div class='mt-3'>
        <div class='row g-2'>
          {{#with actionBlock}}
            <div class='col-4'>
              {{#with input}}
                <input
                  class='form-control'
                  placeholder={{placeholder}}
                />
              {{/with}}
            </div>
            <div class='col-8'>
              {{#each buttons}}
                {{#if isSuccess includeZero=true}}
                  <button
                    type='button'
                    class='btn btn-success'
                    href={{link}}
                  >{{text}}</button>
                {{/if}}
                {{#if isOutline includeZero=true}}
                  <button
                    type='button'
                    class='btn btn-outline-success'
                    href={{link}}
                  >{{text}}</button>
                {{/if}}
                {{#if isDanger includeZero=true}}
                  <button
                    type='button'
                    class='btn btn-outline-danger'
                    href={{link}}
                  >{{text}}</button>
                {{/if}}
              {{/each}}
            </div>
          {{/with}}
        </div>
      </div>
      <div class='mt-3 mb-5'>
        {{#each itemList}}
          <div class='card pb-2'>
            <div class='row'>
              <div class='col-3 pt-4'>
                <p class='card-title'>{{number}}</p>
                <h5 class='card-text'>{{status}}</h5>
              </div>
              <div class='col-2 pt-4'>
                {{#with amount}}
                  <p>{{title}}:</p>
                  <b>{{value}}</b>
                {{/with}}
              </div>
              <div class='col-5 p-0 pt-3'>
                {{#each images}}
                  <img src={{this}} />
                {{/each}}
              </div>
              {{#with button}}
                <div class='col-2 pt-3'>
                  {{#if isPrimary includeZero=true}}
                    <button
                      type='button'
                      class='btn btn-primary'
                      href={{link}}
                    >{{text}}</button>
                  {{/if}}
                </div>
              {{/with}}
            </div>
          </div>
        {{/each}}
      </div>
    {{/with}}
  </div>
  <hr />
  <div class='mt-5 mb-5'>
    {{#with userInfo}}
      <h2>{{title}}</h2>
      <div class='card mt-5 mb-2'>
          {{#with profileData}}
		  <h3 class='card-title m-3'>{{title}}</h3>
       		 <div class='card-body'>
            	<div class='card p-2'>
             	 <div class='row'>
                {{#with fullName}}
                  <div class='col-4'>
                    {{#with surname}}
                      {{title}}
                      <br />
                      <b>{{value}}</b>
                    {{/with}}
                  </div>
                  <div class='col-4'>
                    {{#with name}}
                      {{title}}
                      <br />
                      <b>{{value}}</b>
                    {{/with}}
                  </div>
                  <div class='col-4'>
                    {{#with middleName}}
                      {{title}}
                      <br />
                      <b>{{value}}</b>
                    {{/with}}
                  </div>
                {{/with}}
              </div>
            </div>
            <div class='card p-2 mt-3 mb-3'>
              <div class='row'>
                {{#with otherInfo}}
                  <div class='col-4'>
                    {{#with birthday}}
                      {{title}}
                      <br />
                      <b>{{value}}</b>
                    {{/with}}
                  </div>
                  <div class='col-4'>
                    {{#with sex}}
                      {{title}}
                      <br />
                      <b>{{value}}</b>
                    {{/with}}
                  </div>
                  <div class='col-4'>
                    {{#with language}}
                      {{title}}
                      <br />
                      <b>{{value}}</b>
                    {{/with}}
                  </div>
                {{/with}}
              </div>
            </div>
          {{/with}}
          <div class='card p-2'>
            <div class='row'>
              {{#each buttons}}
                {{#if isPrimary includeZero=true}}
                  <div class='col-4'>
                    <button
                      type='button'
                      class='btn btn-primary'
                      href={{link}}
                    >{{text}}</button>
                  </div>
                {{/if}}
                {{#if isSecondary includeZero=true}}
                  <div class='col-4'>
                    <button
                      type='button'
                      class='btn btn-outline-secondary'
                      href={{link}}
                    >{{text}}</button>
                  </div>
                {{/if}}
                {{#if isDanger includeZero=true}}
                  <div class='col-4'>
                    <button
                      type='button'
                      class='btn btn-outline-danger'
                      href={{link}}
                    >{{text}}</button>
                  </div>
                {{/if}}
              {{/each}}
            </div>
          </div>
        </div>
      </div>
      {{#with recipients}}
        <div class='card'>
          <h3 class='card-title m-3'>{{title}}</h3>
          <div class='card-body'>
            <div class='row g-2'>
              {{#each users}}
                <div class='card col-4 m-2'>
                  <div class='card-body'>
                    <h5 class='card-title'>{{name}}</h5>
                    <p class='card-text'>{{phone}}</p>
                    {{#with button}}
                      <button
                        type='button'
                        class='btn btn-primary'
                        href={{link}}
                      >{{text}}</button>
                    {{/with}}
                  </div>
                </div>
              {{/each}}
            </div>
          </div>
        </div>
      {{/with}}
      {{#with contacts}}
        <div class='card mt-2'>
          <h3 class='card-title m-3'>{{title}}</h3>
          <div class='card-body'>
            <div class='row'>
              {{#each contactData}}
                <div
                  class='card col-4 m-2 p-0'
                  style='width: 16rem;'
                >
                  <div class='card-body'>
                    <p class='card-title'>{{title}}</p>
                    <h5 class='card-text'>{{value}}</h5>
                    {{#with button}}
                      {{#if isPrimary includeZero=true}}
                        <button
                          type='button'
                          class='btn btn-primary'
                          href={{link}}
                        >{{text}}</button>
                      {{/if}}
                      {{#if isSecondary includeZero=true}}
                        <button
                          type='button'
                          class='btn btn-outline-secondary'
                          href={{link}}
                        >{{text}}</button>
                      {{/if}}
                      {{#if isDanger includeZero=true}}
                        <button
                          type='button'
                          class='btn btn-outline-danger'
                          href={{link}}
                        >{{text}}</button>
                      {{/if}}
                    {{/with}}
                  </div>
                </div>
              {{/each}}
            </div>
          </div>
        </div>
      {{/with}}
    {{/with}}
  </div>
  <hr>
  <div class='nav'>
    {{#each footer}}
      <div class='col-2'>
        <div class='nav-item vertically'>
          {{#each this}}
            <a
              class='nav-link'
              aria-current='page'
              href={{link}}
            >{{text}}</a>
          {{/each}}
          <div class='nav-item'>
            <a class='nav-link disabled'>Disabled</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</main>

